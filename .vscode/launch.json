{
  "version": "0.1.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "--require",
        "ts-node/register",
        "${workspaceFolder}/**/test.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
